{
  "compilerOptions": {
    "outDir": "src/dist/js",
    "target": "ES6",
    "module": "esnext",
    "types": ["node"],
    "strict": true,
    "esModuleInterop": true,
    "removeComments": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "lib": ["DOM", "ESNext"],
    "allowJs": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
  },
  "include": [
    "src"
, "src/service"  ]
}
